@model IEnumerable<WebApp.Models.Suite>

@{
    ViewData["Title"] = "Suites";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}


<h1>Suites</h1>
<br />
<p>
    <a asp-action="Add" class="btn btn--primary">Create New</a>
</p>

<div class=login">
    <div class="col-md-8">
        <table class="table">
<thead class="custom-nav">
    <tr>
        <th scope="col"><strong>Ref #</strong></th>
        <th scope="col"><strong> Suite Name</strong></th>
    </tr>
</thead>
<tbody>
        @{
            foreach(var suite in Model)
            
            {
                <tr>
                    <td>@suite.Id</td>
                    <td>@suite.Name</td>
                    <td><a asp-action="Deactivate" class="btn btn-danger" asp-route-id="@suite.Id">Deactivate</a></td>
                </tr>
            }
        }
</tbody>
</table>
</div>
</div>
