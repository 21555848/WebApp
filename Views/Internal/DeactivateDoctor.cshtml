@model WebApp.Models.DoctorMaintenanceModel

@{
    ViewData["Title"] = "Deactivate Doctor";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}




<div class="login">
    <div class="col-md-8">
   <h2 class="heading">Are you sure you want to deactivate Dr @Model.LastName ?</h2>
    <dl class="row">
        <dt class = "col-sm-2">
           <strong> Full Name</strong>
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName &nbsp;@Model.LastName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SuiteName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SuiteName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
    
    <form asp-action="DeactivateDoctor">
        <input type="hidden" asp-for="DoctorId" />
        <input type="submit" value="Deactivate" class="btn btn-danger" /> |
        <a asp-action="Doctors" class="btn btn-warning">Cancel</a>
    </form>
</div>
</div>