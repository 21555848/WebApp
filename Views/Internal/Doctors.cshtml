@model IEnumerable<WebApp.Models.DoctorMaintenanceModel>
@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}



<div class="login">
    <div class="col-md-8">
        <p><a asp-action="AddDoctor">Add a doctor</a></p>
        <table class="table">
    <thead>
        <tr>
            <th scope="col"><strong>Full Name</strong></th>
            <th scope="col"><strong>Email</strong></th>
            <th scope="col"><strong> Suite</strong></th>
            <th scope="col"><strong>Status</strong></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var doc in Model)
            {
                    <tr>
                    <td>@doc.FirstName &nbsp; @doc.LastName </td>
                    <td>@doc.EmailAddress</td>
                    <td>@doc.SuiteName</td>
                    @{
                    if(doc.Active == true)
                    {
                                <td>Active</td>
                                <td><a asp-action="DeactivateDoctor" class="btn btn--secondary btn-danger" asp-route-id="@doc.DoctorId">Deactivate</a></td>
                    }
                    else
                    {
                                <td>Inactive</td>
                                <td><a asp-action="ActivateDoctor" class="btn btn--primary btn-success" asp-route-id="@doc.DoctorId">Activate</a></td>
                    }
                    }
                    
                    </tr>
            }
        }
    </tbody>
</table>

       </div>
  </div>
