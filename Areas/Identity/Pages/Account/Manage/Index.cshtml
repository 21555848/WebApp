@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" disabled class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" disabled class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CellNo" class="form-control" />
                <label asp-for="Input.CellNo" class="form-label"></label>
                <span asp-validation-for="Input.CellNo" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Address2" class="form-control" />
                <label asp-for="Input.Address2" class="form-label"></label>
                <span asp-validation-for="Input.Address2" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.StreetAddress" class="form-control" />
                <label asp-for="Input.StreetAddress" class="form-label"></label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Suburb" class="form-control" />
                <label asp-for="Input.Suburb" class="form-label"></label>
                <span asp-validation-for="Input.Suburb" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Province" class="form-control" />
                <label asp-for="Input.Province" class="form-label"></label>
                <span asp-validation-for="Input.Province" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Company" class="form-control" />
                <label asp-for="Input.Company" class="form-label"></label>
                <span asp-validation-for="Input.Company" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Occupation" class="form-control" />
                <label asp-for="Input.Occupation" class="form-label"></label>
                <span asp-validation-for="Input.Occupation" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.WorkPhone" class="form-control" />
                <label asp-for="Input.WorkPhone" class="form-label"></label>
                <span asp-validation-for="Input.WorkPhone" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MedicalAidName" class="form-control" />
                <label asp-for="Input.MedicalAidName" class="form-label"></label>
                <span asp-validation-for="Input.MedicalAidName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MedicalAidNumber" class="form-control" />
                <label asp-for="Input.MedicalAidNumber" class="form-label"></label>
                <span asp-validation-for="Input.MedicalAidNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
